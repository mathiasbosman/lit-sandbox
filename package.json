{
  "name": "lit-sandbox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "local": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run --config test/driver/vitest/vitest.config.js",
    "test:watch": "vitest watch --config test/driver/vitest/vitest.config.js",
    "test:ui": "vitest --ui --config test/driver/vitest/vitest.config.js",
    "test:e2e": "cypress run --project test/driver/cypress",
    "test:e2e:ui": "cypress open --project test/driver/cypress",
    "lint": "eslint src/**/*.ts",
    "lint:test": "eslint test/**/*.ts",
    "lint:test:fix": "eslint test/**/*.ts --fix",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "lit": "^2.7.6"
  },
  "devDependencies": {
    "@open-wc/testing-helpers": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@vitest/ui": "^0.33.0",
    "autoprefixer": "^10.4.14",
    "cypress": "^12.17.1",
    "eslint": "^8.45.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.25",
    "sass": "^1.63.6",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.12",
    "vitest": "^0.33.0"
  }
}
