{
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "importsNotUsedAsValues": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-missing-element-type-definition": "warn" // Each element MUST be defined as HTMLElementTagNameMap
        }
      },
      {
        "name": "typescript-lit-html-plugin",
        "strict": true
      }
    ]
  }
}
